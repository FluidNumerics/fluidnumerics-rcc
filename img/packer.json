{
  "variables": {
    "project_id": "fluidnumerics-rcc",
    "image_name": "managed-rcc-dev",
    "image_family": "managed-rcc",
    "zone": "us-central1-c",
    "subnet": "default"
  },
  "builders": [{
    "type": "googlecompute",
    "project_id": "{{user `project_id`}}",
    "source_image_family": "schedmd-v5-slurm-22-05-4-centos-7",
    "source_image_project_id": "fluidnumerics-rcc",
    "machine_type": "n1-standard-8",
    "disk_size": 50,
    "zone": "{{user `zone`}}",
    "subnetwork" :"{{user `subnet`}}",
    "image_family": "{{user `image_family`}}",
    "image_name": "{{user `image_name`}}",
    "instance_name":"fluid-slurm-gcp-{{timestamp}}",
    "tags":["cloudbuild"],
    "scopes":["https://www.googleapis.com/auth/cloud-platform"],
    "ssh_username": "fn-packer",
    "state_timeout":"15m"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "img/motd",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "img/env/spack.yaml",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline":[ "sudo mkdir /opt/apps/rcc",
                 "sudo mv /tmp/spack.yaml /opt/apps/rcc/spack.yaml"
               ]
    },
    {
      "type": "shell",
      "inline":[ "sudo mv /tmp/motd /etc/motd"]
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'",
      "script": "img/amdclang.sh"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'",
      "script": "img/pkgs.sh"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'",
      "script": "img/spack.sh"
    }
  ]  
}

